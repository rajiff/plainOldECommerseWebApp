<!DOCTYPE html>
<html>
<head>
	<% include ./partials/head %>
</head>
<body>
	<header>
		<% include ./partials/header %>
	</header>
	<div class='page-content'>

	<div id="message"><%= message %></div>

	<div class='container-fluid col-sm-12'>
	    <ul class="pagination pull-right prd-pagination">
	    	<!-- Very basic pagination -->
	    	<% for(var i=1; i <= pages; ++i) { %>
	    		<% if( page == i) { %>
	    			<li><a href="/home?page=<%= i %>" style="background-color: #E6E6E6;"><%= i %></a></li>
	    		<% } else { %>
					<li><a href="/home?page=<%= i %>"><%= i %></a></li>
				<% } %>	        	
	        <% } %>
	    </ul>
	</div>


	<div class='container-fluid col-sm-12 catalog'>
		<div class="row" id='itemcatalog'>
		<% if (products.length > 0) { %>
			<% for(var i=0; i < products.length; i++) { %>
   			<%- include('partials/product', {product: products[i]}) %>
			<% } %>
		<% } else { %>
			'Coming soon'
		<% } %>

		</div>
	</div><!-- end of catalog -->
	<div>
	<% include ./partials/footer %>
</body>

<% include ./partials/scripts %>

<% if (user.role == 'employee') { %>
	<script src="/socket.io/socket.io.js" type="text/javascript"></script>
	<script src="/vendor/ejs/ejs.min.js" type="text/javascript"></script>
	<script src="/js/empprdfeed.js" type="text/javascript"></script>
<% } %>

</html>
