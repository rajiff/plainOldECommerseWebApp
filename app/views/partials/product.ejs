<!-- item -->
<div class="col-sm-5 col-md-3 prod-item">
	<div class="thumbnail">
		<div class='prod-img-container'>
			<% if (product.img != '') { %>
			<img src="<%= product.img %>" alt='image not available' class="img-rounded img-responsive prod-img"/>
			<% } else { %>
			<img data-src="holder.js/100%x180" alt="100%x180" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 180px; width: 100%; display: block;">
			<% } %>
		</div>
		<div class="caption prod-caption">
			<h3 class='prod-title'><%= product.name %></h3>
			<p class='prod-desc block-with-text'><%= product.description %></p>
			<p>
				Price: â‚¹ <%= product.unitPrice %> only
			</p>
			<p>
				Only <%= product.unitsAvailable %> more left
			</p>
			<p>
				Sold by : <%= product.soldByVendor %>
			</p>
			<p>
				<!-- <a href="#" class="btn btn-primary" role="button">Button</a> --> 
				<a href="#" class="btn btn-default" role="button">Preview</a>
			</p>
		</div> <!-- end of caption -->
	</div> <!-- end of thumbnail -->
</div> <!-- End of one item