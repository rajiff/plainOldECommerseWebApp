<!DOCTYPE html>
<html>
<head>
	<% include ./partials/head %>
</head>
<body>
	<header>
		<% include ./partials/headerNoMenu %>
	</header>
	
	<h3 class="text-center">Login to experience the shopping</h3>

	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<!-- <h1 class="text-center login-title">Sign in</h1> -->
				<div class="account-wall">					
					<form action="/user/session" method="POST" class="form-signin">
						<input type="email" name="email" placeholder="Email" required="required" autofocus="autofocus" class="form-control"/>
						<input type="password" name="password" placeholder="Password" required="required" class="form-control"/>
						<button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button><span class="clearfix"></span>
					</form>
				</div>

				<a href="/signup" class="text-center new-account">Signup now</a>

				<div id="message"><%= message %></div>
			</div>
		</div>
	</div>

	<% include ./partials/footer %>

</body>
<% include ./partials/scripts %>
</html>
